{
  "name": "switch-your-font",
  "displayName": "Switch Your Font",
  "description": "Quickly switch your font for editors and terminals.",
  "version": "1.0.0",
  "publisher": "techstay1989",
  "engines": {
    "vscode": "^1.104.0"
  },
  "author": {
    "name": "techstay",
    "email": "techstay@proton.me",
    "url": "https://github.com/techstay"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "keywords": [
    "font",
    "customization",
    "vscode"
  ],
  "extensionKind": [
    "ui"
  ],
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/techstay/switch-your-font"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "switch-your-font.switchFont",
        "title": "Switch Font"
      },
      {
        "command": "switch-your-font.setFontSize",
        "title": "Set Font Size"
      },
      {
        "command": "switch-your-font.switchTerminalFont",
        "title": "Switch Terminal Font"
      },
      {
        "command": "switch-your-font.setTerminalFontSize",
        "title": "Set Terminal Font Size"
      }
    ],
    "configuration": {
      "title": "Switch Your Font",
      "properties": {
        "switch-your-font.ligaturesMapping": {
          "type": "object",
          "default": {},
          "description": "Mapping of font names to their ligature settings. The key is the font name (matching exactly), and the value is a boolean or a string for font ligatures (e.g., \"'ss02', 'ss03', 'calt'\").",
          "additionalProperties": {
            "oneOf": [
              {
                "type": "boolean"
              },
              {
                "type": "string"
              }
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.19.3",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}